@Article{Simons+2011a,
  Title                    = {Spatiospectral concentration in the {C}artesian plane},
  Author                   = {\textbf{Frederik J. Simons} and Dong V. Wang},
  Journal                  = GEM,
  Year                     = {2011},
  Number                   = {1},
