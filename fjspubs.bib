@Article{Amirbekyan+2008b,
  Title                    = {Parameterizing surface-wave tomographic models with harmonic spherical splines},
  Author                   = {Abel Amirbekyan and Volker Michel and \textbf{Frederik J. Simons}},
  Journal                  = GJI,
