@InProceedings{Yuan+2014b,
  Title                    = {Full-waveform adjoint tomography in a multiscale perspective},
  Author                   = {Yanhua O. Yuan and \textbf{Frederik J. Simons} and Ebru Bozda{\u{g}}},
